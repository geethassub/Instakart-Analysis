#split = StratifiedShuffleSplit(order_train_1[-1:], test_size= 0.20, n_iter = 1, random_state=81)

train,test = train_test_split(order_train_1, test_size = 0.20)

def get_data(data):
    x=data[0:-1]
    y=data[-1:]
    return x,y

def build_model(x,y):

    model_dt = tree.DecisionTreeClassifier(criterion='entropy')
    model_dt = model_dt.fit(x,y)
    return model_dt

x,y = get_data(train)
build_model(x,y)







